// @[./view/view_example_data.sx] (from:now()[-2 day], to:now(),app:'drive')
// @[./view/view_example_data.sx] (from:now()[-2 day], to:now())
@[./view/view_example_data.sx](app:'mobile')
| select(
         email, 
         first:min(time), 
         last:max(time), 
         event[mobile][DEVICE_ID], 
         event[mobile][DEVICE_TYPE], 
         event[mobile][DEVICE_MODEL],
         *
)
| group(email, DEVICE_ID)
| sort(first DESC)